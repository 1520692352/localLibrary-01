extends layout

block content

    h1 作者: #{author.name}
    p #{author.date_of_birth} - #{author.date_of_death}

    div(style='margin-left:20px;margin-top:20px')

        h4 Books

        dl
            each book in author_books
                dt
                    a(href=book.url) #{book.title}
                dd #{book.summary}

            else
                p 这位作者没有书。
    hr
    p
        a(href=author.url + '/delete') 删除作者